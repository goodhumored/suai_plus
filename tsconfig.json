{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "incremental": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "noEmitOnError": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "jsx": "react-jsx"
  },
  "include": [
    "./src/**/*.ts",
    "src/modules/hideTasks/content.tsx",
    "src/modules/hideTasks/popup/settings.component.spec.tsx"
  ]
}
